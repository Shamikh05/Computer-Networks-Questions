#include <stdio.h>

int main() {

        int n1, n2;

        printf("Enter the first number : ");
        scanf("%d",&n1);

        printf("Enter the second number : ");
        scanf("%d",&n2);

        char op;
        printf("Enter the operator (+,-,*,/) : ");
        scanf(" %c", &op);

        switch (op) {
                case '+':
                        printf("The addition result is : %d\n",n1+n2);
                        break;

                case '-':
                        printf("The subtraction result is : %d\n",n1-n2);
                        break;

                case '*':
                        printf("The multiplication result is : %d\n",n1*n2);
                        break;

                case '/':
                        printf("The division result is : %d\n",n1/n2);
                        break;

                default :
                        printf("Invalid Input !!\n");
        }

        return 0;

}
