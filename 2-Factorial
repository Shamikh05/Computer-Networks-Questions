#include <stdio.h>
#include <conio.h>

int fact(int x) {
        if(x==0 || x==1)
                return 1;
        return x*fact(x-1);
}

int main() {

        int n;
        printf("Enter a number : ");
        scanf("%d", &n);

        printf("Factorial of %d is : %d\n",n,fact(n));
        return 0;
}
